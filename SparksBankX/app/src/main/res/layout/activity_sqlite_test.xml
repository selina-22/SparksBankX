<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sqlite_test">
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true">
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/nameTF"
        android:hint="Enter name"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_below="@id/nameTF"
        android:id="@+id/bankidTF"
        android:hint="Enter BANK ID"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_below="@id/bankidTF"
        android:id="@+id/balanceTF"
        android:hint="Enter BALANCE"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@+id/balanceTF"
        android:id="@+id/insertButton"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert Data"
        android:layout_gravity="center"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@+id/insertButton"
        android:id="@+id/viewButton"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Data"
        android:layout_gravity="center"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@+id/viewButton"
        android:id="@+id/dummyButton"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert Dummy Data"
        android:layout_gravity="center"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@+id/dummyButton"
        android:id="@+id/dropButton"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drop all Table Data"
        android:layout_gravity="center"/>



  </LinearLayout>




</RelativeLayout>